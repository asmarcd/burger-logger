<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">Welcome to Flavortown, USA!</h1>
    <img id = "guypic" src="https://townsquare.media/site/66/files/2015/12/Guy-Fieri.jpg?w=980&q=75" alt="Guy Fieri offering a burger">
  </div>
</div>



<div class="container-fluid text-center">
  <div class="card float-md-left">
    <div class="card-body">
      <h2>Burgers you need to eat</h2>
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid text-center">
  <div class="card float-md-right">
    <div class="card-body">
      <h2>Burgers in your belly</h2>
      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid text-center">
  <div class="card">
    <div class="card-body">
      <h2>Order a New Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="eaten">Eaten?</label><br>
          <input type="radio" name="eaten" value="1" checked> Eaten!<br>
          <input type="radio" name="eaten" value="0"> Not Eaten
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>